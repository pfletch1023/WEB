<div class="wrapper">
  <img class="home_banner" src="/assets/welcome.jpg"/>
  <div class="subscribe_box">
  	<div class="event_label_header">REGISTER TO BECOME PART OF THE TEDxYALE COMMUNITY</div>
  	<hr class="event_label_line"/>
  	<%= form_for(@user) do |f| %>
  		<% if @user.errors.any? %>
  			<div class="error_explanation">		
  			<% @user.errors.full_messages.each do |msg| %>
  			<%= msg %>.
  			<% end %>
  			</div>
  	  <% end %>
	  
  	  <div class="subscribe_field">
  		<span class="subscribe_field_label">Full Name:</span>
  		<%= f.text_field :name, :class => "subscribe_input" %>
  	  </div>
	  
  	  <div class="subscribe_field">
  		<span class="subscribe_field_label">Email Address:</span>
  		<%= f.text_field :email, :class => "subscribe_input" %>
  	  </div>
	  
  	  <div class="subscribe_field">
  		<span class="subscribe_field_label">Password:</span>
  		<%= f.password_field :password, :class => "subscribe_input" %>
  	  </div>
	  
  	  <div class="subscribe_field">
  		<span class="subscribe_field_label">Confirm Password:</span>
  		<%= f.password_field :password_confirmation, :class => "subscribe_input" %>
  	  </div>
	  
  	  <div class="subscribe_actions">
  		<%= f.submit "Register", :class => "subscribe_submit"%>
  	  </div>
  	<% end %>
  </div>
</div>