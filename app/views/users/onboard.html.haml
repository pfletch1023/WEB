.wrapper
  .header
    .logo
      %img(src='/assets/WEB_logo.jpg')
  .form
    = form_tag onboard_users_path do
      = text_field_tag :email, params[:email], :placeholder => 'Email Address', :value => @user.email
      = password_field_tag :password, params[:password], :placeholder => 'Choose a Password'
      = password_field_tag :password_confirmation, params[:password_confirmation], :placeholder => "Confirm Password"
      = submit_tag "Enter WEB", :class => 'login'